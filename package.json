{
  "name": "hepaloop-api",
  "version": "1.0.0",
  "description": "A medical app the helps the doctor i monitoring his/her patient.",
  "main": "src/app.js",
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "scripts": {
    "build": "npx babel -d ./build ./src -s",
    "migrate": "npx sequelize db:migrate",
    "undo-migrate": "npx sequelize db:migrate:undo:all",
    "heroku-postbuild": "npm run migrate",
    "dev": "nodemon --exec babel-node src/app.js",
    "prestart": "npm run build",
    "start": "node ./build/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tboy44wiz/Hepaloop-API.git"
  },
  "keywords": [
    "Medical",
    "App",
    "Doctors",
    "Patients"
  ],
  "author": "Osondu Tochukwu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tboy44wiz/Hepaloop-API/issues"
  },
  "homepage": "https://github.com/tboy44wiz/Hepaloop-API#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "joi": "^17.5.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.4",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.12.1",
    "sequelize-cli": "^6.2.0",
    "socket.io": "^4.4.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
